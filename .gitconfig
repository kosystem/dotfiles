[include]
    path = ~/.gitconfig.local
[alias]
    graph = log --graph --oneline --decorate
    tree = log --decorate --oneline --graph --all
    diffw = diff --word-diff=color
    grep = grep --color -n
    s = status -s --branch
    a = add -p
    d = diff
    t = log --decorate --oneline --graph --all -n
[color]
    ui = auto
[svn]
    rmdir = true
[merge]
    ff = false
    tool = vimdiff
[pager]
    # log = diff-highlight | iconv -f CP932 -t UTF-8 | less
    # log = iconv -f CP932 -t UTF-8 | less --tabs=4
    show = iconv -f CP932 -t UTF-8 | less --tabs=4
    diff = iconv -f CP932 -t UTF-8 | less --tabs=4

[core]
	editor = vim
	quotepath = false
	autocrlf = false
    whitespace = cr-at-eol

